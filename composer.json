{
    "name": "mosaxiv/stream-filter-mbencoding",
    "require": {
        "php": ">=7.0.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "StreamFilter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\StreamFilter\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit ./tests",
        "cs-check": "phpcs --standard=PSR2 ./src ./tests",
        "cs-fix": "phpcbf --standard=PSR2 ./src ./tests"
    }
}
